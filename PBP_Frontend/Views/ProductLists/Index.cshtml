@model IEnumerable<PBP_Frontend.Models.ProductList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.List.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityCatched)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredQuantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.List.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityCatched)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiredQuantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductListId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductListId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductListId })
        </td>
    </tr>
}

</table>
